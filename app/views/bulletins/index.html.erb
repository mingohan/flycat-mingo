<div class="h-full bg-gray-200">
  <h1><%= t('公告總覽') %></h1>
  <div class="flex justify-end">
    <%= link_to t("新增公告"), new_bulletin_path,class: "add-btn" if policy(:bulletin).create?%>
  </div>
  <div class="rounded-lg table-center">
    <table class="w-full text-lg rounded-lg shadow-md">
      <tr class="thead">
        <td class="tp"><%= t('公告標題') %></td>
        <td class="tp"><%= t('公告內容') %></td>
        <% if policy(:bulletin).create?  %>
          <td class="tp"><%= t('編輯資訊') %></td>
          <td class="tp"><%= t('刪除公告') %></td>
        <% end %>
      </tr>


      <% @bulletins.each do |bulletin|  %>
      <tr>
        <td class="tbody"><%= link_to bulletin.title , bulletin_path(bulletin) %></td>
        <td class="tbody"><%= link_to bulletin.content , bulletin_path(bulletin) %></td>
          <% if policy(:bulletin).create?  %>
            <td class="tbody"><%= link_to "編輯", edit_bulletin_path(bulletin),class: "edit-btn" %></td>
            <td class="tbody"><%= link_to "刪除", bulletin_path(bulletin.id),class: "delete-btn", method: 'delete', data: {confirm: '確定要刪除嗎？'} if policy(:bulletin).destroy?%>
          </td>
          <% end %>
      </tr>
      <% end %>
      
    </table>
  </div>
</div>
