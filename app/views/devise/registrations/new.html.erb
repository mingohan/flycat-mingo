<h1><%= t('sign_up') %></h1>
<div class="flex items-start justify-center w-full h-screen pt-10 bg-gray-200">
  <div class="w-screen max-w-sm px-10 py-8 bg-white shadow-md rounded-xl">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
    ) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field" >
        <%= f.fields_for :company, Company.new do |c| %>
          <div>
            <%= c.label :title, '公司名稱',class: "block mb-1 font-semibold text-gray-600" %>
            <%= c.text_field :title  ,class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50"%>
          </div>

          <div>
            <%= c.label :ubn, '統一編號',class: "block mb-1 font-semibold text-gray-600" %>
            <%= c.text_field :ubn  ,class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50"%>
          </div>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :email ,class: "block mb-1 font-semibold text-gray-600"%>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50"%>
      </div>

      <div class="field">
        <%= f.label :password ,class: "block mb-1 font-semibold text-gray-600"%>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" ,class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50"%>
      </div>

      <div class="field">
        <%= f.label :password_confirmation ,class: "block mb-1 font-semibold text-gray-600"%><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
      </div>

      <div class="actions">
        <%= f.submit t("sign_up"),class:"px-10 py-4 font-semibold leading-none text-white bg-blue-700 rounded mt-9 hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
