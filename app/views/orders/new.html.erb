<div class="flex items-start justify-center w-full h-screen pt-10 bg-gray-200">
  <% if @order.errors.any? %>
      <ul>
          <% @order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
      <% end %>
      </ul>
  <% end %>
  <div class="w-screen max-w-sm px-10 py-8 bg-white shadow-md rounded-xl">
    <%= form_with(model: @order, url: orders_path, method: 'post') do |form| %>
        <div >
            <%= form.label :username, "名字" ,class: "block mb-1 font-semibold text-gray-600"%>
            <%= form.text_field :username,class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
        </div>
        <div>
            <%= form.label :amount, "金額" ,class: "block mb-1 font-semibold text-gray-600"%>
            <%= form.number_field :amount, placeholder: "請填入捐款金額", min:1,class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
        </div>
        <div >
            <%= form.label :memo, "留言" ,class: "block mb-1 font-semibold text-gray-600"%>
            <%= form.text_area :memo, rows: 5,class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
        </div>
        
            <%= form.submit :贊助飛天貓,class: "px-10 py-4 font-semibold leading-none text-white bg-blue-700 rounded mt-9 hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" %>
    <% end %>
  </div>
</div>