<div class="flex items-start justify-center w-full h-screen pt-10 bg-gray-200">
  <div class="w-screen max-w-sm px-10 py-8 bg-white shadow-md rounded-xl">
  <h1 class="pb-3 font-bold text-center text-gray-500">編輯公司資訊</h1>
  <%= form_with(model: @company) do |form| %>
    <% if @company.errors.any?  %>
      <ul>
        <% @company.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <div class="field">
      <%= form.label :title, "公司名稱",class: "block mb-1 font-semibold text-gray-600" %>
      <div class= "w-full px-4 py-2 rounded-md outline-none bg-indigo-50">
        <%= current_company.title %>
      </div>
    </div>

    <div class="field">
      <%= form.label :ubn, "統一編號",class: "block mb-1 font-semibold text-gray-600" %>
      <%= form.text_field :ubn,readonly: :true,class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
    </div>

    <div class="field">
      <%= form.label :person_in_charge, "負責人",class: "block mb-1 font-semibold text-gray-600" %>
      <%= form.text_field :person_in_charge,class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
    </div>

    <div class="field">
      <%= form.label :address, "公司地址",class: "block mb-1 font-semibold text-gray-600" %>
      <%= form.text_field :address,class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
    </div>

    <div class="field">
      <%= form.label :contact_person, "公司聯絡人",class: "block mb-1 font-semibold text-gray-600" %>
      <%= form.text_field :contact_person,class: "w-full px-4 py-2 rounded-md outline-none bg-indigo-50" %>
    </div>

    <div class="actions">
      <%= form.submit class:"px-10 py-4 font-semibold leading-none text-white bg-blue-700 rounded mt-9 hover:bg-blue-600 focus:ring-2 focus:ring-offset-2 focus:ring-blue-700 focus:outline-none" %>
    </div>

  <% end %>
</div>

